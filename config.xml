    <splash platform="ios" src="resources/ios/splash/Default@2x~ipad~comany.png" />
    <icon src="resources/icon.png" />
    <splash src="resources/splash.png" />
    <engine name="android" spec="7.1.1" />
     
    <plugin name="cordova-plugin-android-permissions" spec="1.0.2" />
    
    <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
    <plugin name="cordova-plugin-statusbar" spec="2.4.2" />
    <plugin name="cordova-plugin-device" spec="2.0.2" />
    <gap:plugin spec="https://github.com/pdyraga/cordova-plugin-splashscreen" />
    <plugin name="cordova-plugin-ionic-webview" spec="^2.4.1" />
